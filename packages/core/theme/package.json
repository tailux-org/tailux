{
  "name": "@tailux/theme",
  "version": "0.0.0",
  "description": "The default theme for Tailux components",
  "author": "Emiliano Murillo <emilianomurillo12@gmail.com>",
  "homepage": "",
  "license": "MIT",
  "keywords": [
    "react",
    "plugin",
    "tailwind",
    "tailwind-css",
    "components",
    "react-components",
    "tailwindcss-components"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist",
    "plugin.js",
    "plugin.d.ts",
    "colors.js",
    "colors.d.ts"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tailux-org/tailux.git",
    "directory": "packages/core/theme"
  },
  "scripts": {
    "build": "tsup --dts",
    "build:fast": "tsup",
    "dev": "tsup --watch --dts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "prepack": "clean-package",
    "postpack": "clean-package restore"
  },
  "dependencies": {
    "color": "4.2.3",
    "color2k": "^2.0.3",
    "deepmerge": "4.3.1",
    "flat": "^5.0.2",
    "lodash.get": "4.4.2"
  },
  "devDependencies": {
    "@tailux/tsconfig": "workspace:*",
    "@types/color": "3.0.6",
    "@types/flat": "^5.0.2",
    "@types/lodash.get": "4.4.9",
    "tailwindcss": "3.4.1"
  },
  "peerDependencies": {
    "tailwindcss": "^3.0.0"
  },
  "clean-package": "../../../clean-package.config.json"
}
