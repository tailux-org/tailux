{
  "private": true,
  "scripts": {
    "build": "turbo run build --filter=!docs --filter=!storybook",
    "build:docs": "turbo run build --filter=docs",
    "build:storybook": "turbo run build --filter=storybook",
    "changelog": "tsx scripts/changelog.ts",
    "changelog:commit": "git add . && git commit -am 'docs: add changelog' && git push",
    "changelog:format": "prettier --write .changelog CHANGELOG.md",
    "changelog:latest": "tsx scripts/changelog.ts --latest",
    "clean": "turbo run clean && rm -rf node_modules",
    "create:component": "plop component",
    "dev": "turbo run dev --filter=!docs --no-cache --continue",
    "dev:storybook": "turbo run dev --filter=storybook --no-cache --continue",
    "dev:docs": "turbo run dev --filter=docs --no-cache --continue",
    "format:check": "prettier --check packages/**/** --cache",
    "format:write": "prettier --write packages/**/** --cache",
    "lint": "pnpm lint:pkg && pnpm lint:docs",
    "lint:docs": "eslint -c .eslintrc.json ./apps/docs/**/*.{ts,tsx}",
    "lint:fix": "eslint --fix -c .eslintrc.json ./packages/**/**/*.{ts,tsx}",
    "lint:fix-docs": "eslint --fix -c .eslintrc.json ./apps/docs/**/*.{ts,tsx}",
    "lint:pkg": "eslint -c .eslintrc.json ./packages/**/**/*.{ts,tsx}",
    "lint:staged": "lint-staged",
    "release": "changeset publish",
    "release:dev": "changeset publish --snapshot --tag dev",
    "test": "jest --verbose --config ./jest.config.js",
    "turbo:graph": "pnpm build --graph=dependency-graph.png",
    "typecheck": "turbo run typecheck --filter=!docs",
    "version": "changeset version",
    "version:dev": "changeset version --snapshot dev",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@tailux/tsconfig": "workspace:*",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@octokit/rest": "^20.0.2",
    "@swc/core": "^1.3.100",
    "@swc/jest": "^0.2.29",
    "@testing-library/dom": "^9.3.3",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.11",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.13.1",
    "clean-package": "^2.2.0",
    "concurrently": "^8.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^40.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-n": "^16.3.1",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-watch-typeahead": "^2.2.2",
    "lint-staged": "^15.2.0",
    "plop": "^4.0.0",
    "prettier": "^3.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^6.0.1",
    "tsx": "^4.6.2",
    "turbo": "latest",
    "type-fest": "^4.10.2",
    "typescript": "^5.2.2"
  },
  "pnpm": {
    "overrides": {
      "react": "^18.2.0",
      "react-dom": "^18.2.0"
    }
  },
  "engines": {
    "node": ">=16.x",
    "pnpm": ">=8.x"
  },
  "packageManager": "pnpm@8.15.2"
}
